@model NewsArticle.Models.Transporte

@{
    ViewData["Title"] = "Editar Transporte";
}

<h1>Editar Transporte</h1>

<div class="m-4">
    <form asp-action="Editar" method="post">
        <div class="form-group">
            <label asp-for="TipoTransporte" class="control-label"></label>
            <input asp-for="TipoTransporte" class="form-control" />
            <span asp-validation-for="TipoTransporte" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
