@model IEnumerable<NewsArticle.Models.TipoViolencia>

@{
    ViewData["Title"] = "Tipos de Violencia";
}

<div class="m-4">
    <h1>Tipos de Violencia</h1>
    <a asp-action="Crear" class="btn btn-primary mb-3">Crear nuevo</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Tipo de Violencia</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TipoViolenciaNombre</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                        <a asp-action="Borrar" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
