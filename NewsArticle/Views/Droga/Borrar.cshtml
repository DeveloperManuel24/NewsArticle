@model NewsArticle.Models.Droga

@{
    ViewData["Title"] = "Borrar Droga";
}

<div class="m-4">
    <h1>¿Está seguro de que desea borrar esta droga?</h1>
    <h3>"@Model.TipoDroga"</h3>

    <form asp-action="Borrar">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button class="btn btn-danger">Borrar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </form>
    <h1 class="p-3 mt-5 badge text-bg-danger big-text">Si estás seguro de que ninguna droga está ligada a una nota periodística y que no sea afectada, podrás eliminar la droga.</h1>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
